# ===============================================
# AIM TRAINER PRO - VPS ENVIRONMENT VARIABLES
# ===============================================

# ===============================================
# SERVER CONFIGURATION
# ===============================================
NODE_ENV=production
PORT=3002
HOST=0.0.0.0

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
# PostgreSQL Database
DATABASE_URL=postgresql://aim_user:strong_password_123@localhost:5432/aim_trainer
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aim_trainer
DB_USER=aim_user
DB_PASSWORD=strong_password_123

# ===============================================
# AUTHENTICATION
# ===============================================
# JWT Secret (Change this to a strong random string)
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# ===============================================
# CORS CONFIGURATION
# ===============================================
# Frontend URLs (Desktop app ve future web app i√ßin)
CORS_ORIGIN=https://aim.liorabelleleather.com,http://localhost:3000
ALLOWED_ORIGINS=https://aim.liorabelleleather.com,http://localhost:3000

# ===============================================
# SESSION CONFIGURATION
# ===============================================
SESSION_SECRET=your_session_secret_change_this_in_production

# ===============================================
# RATE LIMITING
# ===============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===============================================
# FILE UPLOAD
# ===============================================
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# ===============================================
# SOCKET.IO CONFIGURATION
# ===============================================
SOCKET_IO_CORS_ORIGIN=https://aim.liorabelleleather.com
SOCKET_IO_TRANSPORTS=websocket,polling

# ===============================================
# LOGGING
# ===============================================
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/aim-trainer/app.log

# ===============================================
# REDIS (Optional - for caching)
# ===============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===============================================
# MONITORING
# ===============================================
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PATH=/health 