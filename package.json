{
  "name": "aim-trainer-desktop",
  "version": "1.1.9",
  "description": "Professional FPS Aim Training Desktop Application",
  "main": "electron/main.js",
  "homepage": "./",
  "private": true,
  "author": {
    "name": "AIM TRAINER PRO Team",
    "email": "contact@aimtrainer.pro",
    "url": "https://aimtrainer.pro"
  },
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "client:dev": "cd client && npm run dev",
    "server:dev": "cd server && npm run dev",
    "build": "npm run client:build && npm run server:build",
    "client:build": "cd client && npm run build",
    "server:build": "cd server && npm run build",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run client:dev\" \"npm run server:dev\" \"wait-on http://localhost:3000 http://localhost:3001 && electron .\"",
    "electron:pack": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "electron:publish": "npm run build && electron-builder --publish=always",
    "postinstall": "node -e \"if (process.env.NODE_ENV !== 'production') { const { execSync } = require('child_process'); try { execSync('electron-builder install-app-deps', { stdio: 'inherit' }); } catch (e) { console.log('Electron-builder not available, skipping...'); } }\"",
    "clean": "rimraf dist-electron && rimraf client/dist && rimraf server/dist",
    "rebuild": "npm run clean && npm run build && npm run electron:pack",
    "install:server": "cd server && npm install --production",
    "install:vps": "npm run install:server && cd server && npm run build",
    "release": "node scripts/release.js"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "29.0.0",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "electron-reload": "^2.0.0-alpha.1",
    "rimraf": "^6.0.1",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.aimtrainer.desktop",
    "productName": "AIM TRAINER PRO",
    "electronVersion": "29.0.0",
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "directories": {
      "output": "dist-electron-debug"
    },
    "files": [
      "electron/**/*",
      "client/dist/**/*",
      "server/dist/**/*",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "server/dist",
        "to": "server",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "AIM TRAINER PRO Team",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false,
      "signDlls": false,
      "verifyUpdateCodeSignature": false,
      "publish": [
        {
          "provider": "github",
          "owner": "kxrk0",
          "repo": "aim-training"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.games",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "linux": {
      "target": "AppImage",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "AIM TRAINER PRO",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "menuCategory": "Games",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "warningsAsErrors": false,
      "displayLanguageSelector": false,
      "differentialPackage": false
    },
    "compression": "maximum",
    "publish": [
      {
        "provider": "github",
        "owner": "kxrk0",
        "repo": "aim-training"
      }
    ],
    "forceCodeSigning": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "buildVersion": "1.0.0"
  }
}
